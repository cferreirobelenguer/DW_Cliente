    <script>
        var dados=[6];

        function tiradasDados(dados){
            let imagen1="";
            let imagen2="";
            let imagen3="";
            let imagen4="";
            let imagen5="";
            let imagen6="";

            let tirada=Math.floor(Math.random()*6);
            for(let i of dados){
                dados[i]=tirada;
                switch(i){
                    case 1:
                        document.images["midado"].src="dados1.jpg";
                    break;
                    case 2:
                        document.images["midado"].src="dados2.jpg";
                    break;
                    case 3:
                        document.images["midado"].src="dados3.jpg";
                    break;
                    case 4:
                        document.images["midado"].src="dados4.jpg";
                    break;
                    case 5:
                        document.images["midado"].src="dados5.jpg";
                    break;
                    case 6:
                        document.images["midado"].src="dados6.jpg";
                    break;
                    
                    }
            }

        }
        

    </script>
