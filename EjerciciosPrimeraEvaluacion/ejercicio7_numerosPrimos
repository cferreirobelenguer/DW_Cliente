    <button id="boton" onclick="numeroPrimo();">Ver números primos</button>
    <textarea id="texto"></textarea>
    <script>
      
function numeroPrimo(){
    let array=[];  
    let array_divisores=[];
    let numero=parseInt(prompt("Escriba un número"));
    
    let divisores=0;
   for(let i=2;i<=numero;i++){
       for(let j=2;j<=numero;j++){
        if(i%j==0){
            divisores++;
            
            }
        }
         if(divisores==2){
           array.push(i);
       }else{
           divisores=0;
       }
    }
    
   console.log("Listado de primos : ");
   
   for(let i in array){
    console.log(array[i])
      
   }
   
    let texto=document.getElementById("texto").value="Listado de números primos "+array;
}

    </script>
