  for( var i=0;i<x.length;i++){
    console.log("________________");
    
    //Muestra el tipo de nodo
    console.loh("El tipo de nodo es :"+x[i].nodeType);
    //Muestra el nombre del nodo
    console.log("El nombre de nodo es : "+x[i].nodeName);
