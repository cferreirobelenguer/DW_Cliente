//EJEMPLO DE CALCULADORA DE SUMA EN JS

function resultado(){
    //Obtenemos los valores de los números y el operador
    let resultado1=document.getElementById("boton1");
    let num1=document.getElementById("numero1").value;
    console.log(num1);
    
    let num2=document.getElementById("numero2").value;
    console.log(num2);
    resultado1.innerHTML="Usted ha elegido los números: "+num1+" "+num2;

    //Pasamos los números a integer
    let numero1_=parseInt(num1);
    let numero2_=parseInt(num2);
    let resultado=numero1_+numero2_;
    resultado1.innerHTML=("El resultado de la suma es: "+resultado);

}
function borrarResultado(){
    let borrar_=document.getElementById("boton1");
    borrar_.innerHTML=(" ");
}

