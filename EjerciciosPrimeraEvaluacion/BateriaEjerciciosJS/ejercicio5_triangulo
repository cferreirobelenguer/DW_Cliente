    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ejercicio 5</title>
</head>
<body>
    <button id="boton" onclick="crearTriangulo();">Dibujar triángulo</button>
    <section id="triangulo">

    </section>
    <script>
        function crearTriangulo(){
        let numero=parseInt(prompt("Introduce un número"));
            for(let i=1;i<numero;i++){
                for(let k=1;k<i;k++){
                    document.write("*");
                    
                    
                }
                
                document.write("*");
                document.write("<br>");
            }
        }
        
    </script>
</body>
</html>
