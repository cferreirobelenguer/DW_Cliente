    <script>
        let radio=parseInt(prompt("Introduce un radio para calcular una circunferencia"));
        function calcularCircunferencia(radio){
            let numeroPi=Math.PI;
            let radioTotal=2*numeroPi*radio;
            alert("EL resultado del Ã¡rea de la circunferencia es "+radioTotal);
        }
        calcularCircunferencia(radio);
    </script>
